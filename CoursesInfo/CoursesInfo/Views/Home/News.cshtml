@model CoursesInfo.Models.MainPageModel

@{
    ViewBag.Title = "Новость - " + Model.News.First().Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    IEnumerable<CoursesInfo.Core.Entities.News> news = Model.News;
}

<a href="~/Home/Index">Home</a> ->
<a href="~/Home/AllNews">All news</a>

<table>
    <!-- -->
    @foreach(var _news in Model.News)
    {       <tr>
                        <td>
                            <table class="news">
                                <th colspan="2">
                                    @_news.Title
                                </th>
                                <tr>
                                    <td class="left-part">
                                        <img src="/Content/no_image.jpg" /> <br /> @_news.Company.Name
                                    </td>
                                    <td class="right-part">
                                             @_news.Text
                                    </td>
                                </tr>
                            </table>
                            <br />
                        </td>
                </tr>
    }
</table>